<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

    <!-- Payment -->

        <record id="view_voucher_check_form" model="ir.ui.view">
            <field name="name">account.voucher.check.form.inherit</field>
            <field name="model">account.voucher</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="account_voucher.view_vendor_payment_form"/>
            <field name="arch" type="xml">
<!--
                <field name="amount" position="after">
                    <separator string="Metodos de Pago" colspan="8"/>
                </field>
-->
                <page string="Payment Information" position="after">
                    <page string="Checks">
                        <field name="issued_check_ids" string="Issued Checks"
                            nolabel="1" colspan="4"
                            on_change="onchange_pay_amount(payment_line_ids,issued_check_ids,third_check_ids,third_check_receipt_ids,
                                        journal_id, partner_id, currency_id, type, date ,context)"/>
                        <separator string="Third Checks" colspan="4"/>


                        <field name="third_check_ids" 
                            string="Third Checks" nolabel="1" colspan="4" domain="[('state', '=', 'wallet')]"
                            on_change="onchange_pay_amount(payment_line_ids,issued_check_ids,third_check_ids,third_check_receipt_ids,
                                        journal_id, partner_id, currency_id, type, date ,context)">
                           <tree string="Third Checks">
                                <field name="number"/>
                                <field name="source_partner_id"/>
                                <field name="issue_date"/>
                                <field name="payment_date"/>
                                <field name="bank_id"/>
                                <field name="origin"/>
                                <field name="amount"/>
                            </tree>
                         </field>
                    </page>
                </page>
            </field>
        </record>

   <!-- Receipt -->
        <record id="view_vendor_receipt_check_form" model="ir.ui.view">
            <field name="name">account.voucher.form.receipt.inherit</field>
            <field name="model">account.voucher</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="account_voucher.view_vendor_receipt_form"/>
            <field name="arch" type="xml">
                <page string="Payment Information" position="after">
                    <page string="Checks">
                        <field name="third_check_receipt_ids"
                            string="Third Checks" nolabel="1" colspan="4"
                            on_change="onchange_pay_amount(payment_line_ids,issued_check_ids,third_check_ids,third_check_receipt_ids,
                                        journal_id, partner_id, currency_id, type, date ,context)">
                            <tree string="Third Checks">
                                <field name="number"/>
                                <field name="receipt_date"/>
                                <field name="issue_date"/>
                                <field name="payment_date"/>
                                <field name="bank_id"/>
                                <field name="type"/>
                                <field name="amount"/>
                                <field name="state"/>
                            </tree>
                            <form string="Third Checks">
                                <field name="source_partner_id" invisible="1"/>
                                <field name="number"/>
                                <field name="type"/>
                                <group colspan="4" col="6">
                                    <group colspan="4" col="4">
                                        <separator colspan="4" string="Check Information"/>
                                        <field name="bank_id"/>
                                        <field name="amount"/>
                                        <field name="receipt_date"/>
                                        <field name="issue_date"/>
                                        <field name="payment_date" attrs="{'invisible': [('type', '=', 'common')],
                                                                           'required': [('type','=','postdated')]}"/>
                                    </group>
                                    <group colspan="2" col="2">
                                        <separator string="Other Information" colspan="2"/>
                                        <field name="clearing"/>
                                        <field name="signatory"/>
                                    </group>
                                </group>
                                <separator string="State" colspan="4"/>
                                <field name="state" colspan="4"/>
                            </form>
                        </field> 
                        <button name="add_precreated_check"
                            string="Add Pre-created" type="object" icon="terp-folder-orange"/>
                   </page>
                </page>
            </field>
        </record>
        
        <record id="view_acc_voucher_inherits_form3" model="ir.ui.view">
            <field name="name">account.voucher.payment.form3.inherit</field>
            <field name="model">account.voucher</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="l10n_ar_account_payment.view_acc_voucher_inherits_form2"/>
            <field name="arch" type="xml">
                <field name="payment_line_ids" position="replace" >
                    <field  name="payment_line_ids" nolabel="1" colspan="4" on_change="onchange_paymode_line(payment_line_ids)">
                        <tree string="Payment Lines" editable="bottom">
                            <field name="name"/>
                            <field name="date" readonly="1"/>
                            <field name="currency" readonly="1"/>
                            <field name="amount" sum="Total"/>
                        </tree>
                        <form>
                            <field name="name" readonly="1"/>
                            <field name="date" readonly="0"/>
                            <field name="currency" readonly="0"/>
                            <field name="amount"/>
                        </form>
                    </field>
                </field>
            </field>
        </record>
    </data>
</openerp>
